Cmnd_Alias REMOTELABZ_CMDS = /bin/systemctl start git-version-update.service, /bin/systemctl status git-version-update.service
Cmnd_Alias REMOTELABZ_SERVICE = /bin/systemctl start remotelabz*, /bin/systemctl stop remotelabz*, /bin/systemctl status remotelabz*
Cmnd_Alias REMOTELABZ_CMDS_NETWORK = /usr/sbin/ip, /sbin/iptables

%www-data ALL=(ALL) NOPASSWD: REMOTELABZ_CMDS, REMOTELABZ_SERVICE, REMOTELABZ_CMDS_NETWORK
