{% extends 'dashboard.base.html.twig' %}

{% block title %}Galerie d'icônes{% endblock %}

{% block body %}
<div class="card">
    <h1>Galerie d'icônes SVG</h1>
    
    <div class="row">
        {% for icon_id in svg_icons_list() %}
            <div class="card">
                {{ svg(icon_id, 'icon-large') }}
                <span class="card-header">{{ icon_id }}</span>
            </div>
        {% else %}
            <p>Aucune icône trouvée</p>
        {% endfor %}
    </div>
</div>
{% endblock %}

