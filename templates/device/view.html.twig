{% extends 'device/index.html.twig' %}

{% set publicPath = is_granted("ROLE_ADMINISTRATOR") ? "" : "_public" %}

{% block breadcrumbs %}
    {%- set breadcrumbs = breadcrumbs|merge({ (device.name): path('show_device' ~ publicPath, {'id': device.id}) }) -%}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
{# Delete Confirmation Modal #}
{% embed 'modal.html.twig' with {
    'title': 'Delete Device'|trans, 
    'class': 'delete-modal',
    'id': 'deleteModal'
} %}
    {% block body %}
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> This action cannot be undone.
    </div>
    <p>Are you sure you want to delete the device <strong>{{ device.name }}</strong>?</p>
    
    <div class="d-flex justify-content-between mt-3">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form method="post" action="{{ path('delete_device', {'id': device.id}) }}" class="d-inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ device.id) }}">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Delete Device
            </button>
        </form>
    </div>
{% endblock %}
{% endembed %}

{# Header Section #}
<div class="content-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <div class="d-flex align-items-center mb-2">
                <h1 class="display-6 mb-0 me-3">{{ device.name }}&nbsp;</h1>
                <div class="device-badges">
                    {% if device.type == 'vm' %}
                        <span class="badge bg-info fs-6">
                            <i class="fas fa-desktop me-1"></i> Virtual Machine
                        </span>
                    {% elseif device.type == 'container' %}
                        <span class="badge bg-success fs-6">
                            <i class="fab fa-docker me-1"></i> Container
                        </span>
                    {% elseif device.type == 'physical' %}
                        <span class="badge bg-warning text-dark fs-6">
                            <i class="fas fa-server me-1"></i> Physical Device
                        </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{# Main Content #}
<div class="row">
    <div class="col-lg-8">
        {# Device Information Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i> Device Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Brand:</strong></div>
                    <div class="col-sm-9">
                        {% if device.brand %}
                            {{ device.brand }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Model:</strong></div>
                    <div class="col-sm-9">
                        {% if device.model %}
                            {{ device.model }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Type:</strong></div>
                    <div class="col-sm-9">
                        {% if device.type == 'vm' %}
                            <span class="badge bg-info">Virtual Machine</span>
                        {% elseif device.type == 'container' %}
                            <span class="badge bg-success">Container</span>
                        {% elseif device.type == 'physical' %}
                            <span class="badge bg-warning text-dark">Physical Device</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ device.type|title }}</span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="row mb-0">
                    <div class="col-sm-3"><strong>Operating System:</strong></div>
                    <div class="col-sm-9">
                        {% if device.operatingSystem %}
                            <span class="badge bg-light text-dark">{{ device.operatingSystem.name }}</span>
                            {% if device.operatingSystem.flavordisk %}
                                <span class="text-muted small">{{ device.operatingSystem.flavordisk.disk }}GB</span>
                            {% endif %}    
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}

                    </div>
                </div>
            </div>
        </div>

        {# Hardware Specifications Card (Only for virtual devices) #}
        {% if device.virtuality == 1 %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-microchip me-2"></i> Hardware Specifications
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>vCPU:</strong></div>
                    <div class="col-sm-9">
                        <span class="badge bg-primary">{{ device.nbCpu|default(1) }} vCPU</span>
                    </div>
                </div>
                
                {% if device.flavor %}
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Flavor:</strong></div>
                    <div class="col-sm-9">
                        <div class="text-muted small mt-1">
                            <i class="fas fa-memory me-1"></i> {{ device.flavor.memory }} MB RAM
                        </div>
                    </div>
                </div>
                {% endif %}
                
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>CPU Details:</strong></div>
                    <div class="col-sm-9">
                        <div class="small text-muted">
                            {% if device.nbCore %}<strong>Cores:</strong> {{ device.nbCore }}{% endif %}
                            {% if device.nbSocket %}{% if device.nbCore %} • {% endif %}<strong>Sockets:</strong> {{ device.nbSocket }}{% endif %}
                            {% if device.nbThread %}{% if device.nbCore or device.nbSocket %} • {% endif %}<strong>Threads:</strong> {{ device.nbThread }}{% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="row mb-0">
                    <div class="col-sm-3"><strong>Hypervisor:</strong></div>
                    <div class="col-sm-9">
                        {% if device.hypervisor %}
                            <span class="badge bg-light text-dark">{{ device.hypervisor.name|title }}</span>
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-microchip me-2"></i> Associated ISO
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>ISO:</strong></div>
                    {% for iso in device.isos %}
                    <div class="col-sm-9">
                        {{iso.name}} {% if iso.description %} ({{iso.description}}) {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}

        

        {# Control Protocols Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-terminal me-2"></i> Control Protocol
                </h5>
            </div>
            <div class="card-body">
                {% if device.controlProtocolTypes|length > 0 %}
                    <div class="d-flex flex-wrap gap-2">
                        {% for controlProtocolType in device.controlProtocolTypes %}
                            {% if controlProtocolType.name == 'vnc' %}
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-desktop me-1"></i> {{ controlProtocolType.name|upper }}
                                </span>
                            {% elseif controlProtocolType.name == 'login' %}
                                &nbsp;<span class="badge bg-success fs-6">
                                    <i class="fas fa-terminal me-1"></i> {{ controlProtocolType.name|upper }}
                                </span>
                            {% elseif controlProtocolType.name == 'serial' %}
                                &nbsp;<span class="badge bg-warning fs-6">
                                    <i class="fas fa-plug me-1"></i> {{ controlProtocolType.name|upper }}
                                </span>
                            
                            {% endif %}
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-muted">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        No control protocols configured
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        {# Quick Actions Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('devices') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Devices
                    </a>

                    <hr class="my-2">
                    
                    {% if is_granted("ROLE_TEACHER_EDITOR") %}
                    <a href="{{ path('edit_device', {'id': device.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i> Edit Device
                    </a>
                    
                    <hr class="my-2">
                    
                    <button class="btn btn-danger" data-toggle="modal" data-target={{'.delete-modal'}}>
                        <i class="fas fa-trash me-2"></i> Delete Device
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Device Statistics Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-2"></i> Statistics
                </h5>
            </div>
            <div class="card-body text-center">
                
                            <h5 class="mb-0">{{ device.LabsUsingThisTemplate|length }}</h5>
                            <small class="text-muted">Used as template by other devices<br></small>
                            <small class="text-muted">Each device here is a template which is duplicated when in new device when you add it in a lab</small>
                
            </div>
        </div>

        {# Device Icon Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-image me-2"></i> Device Icon
                </h5>
            </div>
            <div class="card-body text-center">
                {% if device.icon %}
                    <img src="{{ asset('build/images/icons/' ~ device.icon) }}" 
                    alt="{{ device.name }}"
                    class="img-fluid mb-2"
                    style="max-width: 64px; max-height: 64px;"/>
                {% else %}
                    <div class="text-muted">
                        <i class="fas fa-image fa-3x mb-2"></i>
                        <div>No icon assigned</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Copy to clipboard functionality
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                console.log('Copied to clipboard:', text);
            });
        }
        
        // Add click handlers for copyable elements
        document.addEventListener('DOMContentLoaded', function() {
            const codeElements = document.querySelectorAll('code');
            codeElements.forEach(function(element) {
                element.style.cursor = 'pointer';
                element.title = 'Click to copy';
                element.addEventListener('click', function() {
                    copyToClipboard(this.textContent);
                });
            });
        });
    </script>
{% endblock %}