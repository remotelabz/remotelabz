{% extends 'device/index.html.twig' %}

{% block breadcrumbs %}
{% if virtuality == 1 %}
    {% set breadcrumbs = app.request.uri ends with 'edit' ? breadcrumbs|merge({ 'Edit': null }) : breadcrumbs|merge({ 'New': path('new_device') }) %}
{% else %}
    {% set breadcrumbs = app.request.uri ends with 'edit' ? breadcrumbs|merge({ 'Edit': null }) : breadcrumbs|merge({ 'New': path('new_physical_device') }) %}
{% endif %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
<div class="content-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <div class="d-flex align-items-center">
                <h1 class="display-6 mb-0 me-3">
                    {% if app.request.uri ends with 'edit' %}
                        Edit Device: {{ data.name }}&nbsp;
                    {% else %}
                        New Device&nbsp;
                    {% endif %}
                </h1>
                {% if virtuality == 1 %}
                    <span class="badge bg-info fs-6">Virtual Device</span>
                {% else %}
                    <span class="badge bg-warning text-dark fs-6">Physical Device</span>
                {% endif %}&nbsp;
                {% if data.type == "container" %}
                    <span class="badge bg-success">
                                    <i class="fab fa-docker me-1"></i>&nbsp;Container
                    </span>
                {% else %}
                    <span class="badge bg-info">
                                    <i class="fas fa-desktop me-1"></i>&nbsp;VM
                                </span>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cog me-2"></i>
                    {% if app.request.uri ends with 'edit' %}
                        Device Configuration
                    {% else %}
                        New Device Configuration
                    {% endif %}
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                
                {{ form_row(form.name) }}

                <div class="form-group row">
                    {{ form_label(form.icon) }}
                    <div class="col-sm-10 icon-selector-container">
                        <div class="d-flex align-items-center">
                            <div class="icon-preview empty" id="iconPreview">
                                <i class="fas fa-image"></i>
                            </div>
                            <div class="flex-grow-1">
                                {{ form_widget(form.icon, {'attr': {'style': 'display: none'}}) }}
                                <input type="text" 
                                    class="form-control" 
                                    id="iconDisplay" 
                                    placeholder="Choose an icon..." 
                                    readonly
                                    style="cursor: pointer;"
                                    data-icon-path="{{ asset('build/images/icons/') }}">
                            </div>
                        </div>
                        <div class="icon-dropdown" id="iconDropdown">
                            <input type="text" 
                                    class="icon-search-input" 
                                    id="iconSearch" 
                                    placeholder="Search icons...">
                            <div id="iconOptions"></div>
                        </div>
                        {% if form.icon.vars.help %}
                        <small class="form-text text-muted">{{ form.icon.vars.help }}</small>
                        {% endif %}
                    </div>
                    
                </div>

                {{ form_row(form.brand) }}
                {{ form_row(form.model) }}
                
                {{ form_row(form.operatingSystem) }}
                {{ form_row(form.bios_type) }}
                {{ form_row(form.bios_filename) }}
                
                {# Champs ISO et CDROM bus - affichés conditionnellement #}
                <div id="iso-fields-container">
                    {{ form_row(form.cdrom_bus_type) }}
                    {{ form_row(form.isos) }}
                </div>
                
                {{ form_row(form.flavor) }}
                
                {% if virtuality == 1 %}
                    {{ form_row(form.nbCpu) }}
                    {{ form_row(form.nbCore) }}
                    {{ form_row(form.nbSocket) }}
                    {{ form_row(form.nbThread) }}                   
                {% endif %}
                
                {{ form_row(form.controlProtocolTypes) }}
                
                {% if virtuality == 0 %}
                <div class="row mb-3">
                    <div class="col-md-6">
                        {{ form_row(form.ip) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.port) }}
                    </div>
                </div>
                {% endif %}
                {{ form_row(form.other_options) }}
                {{ form_row(form.isTemplate) }}
                
                <div class="d-flex justify-content-between">
                    <a href="{{ path('devices') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Cancel
                    </a>
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i> Device Types
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-desktop text-info me-2"></i>
                        <strong>&nbsp;Virtual Machine</strong>
                    </div>
                    <small class="text-muted">Full virtualization using QEMU/KVM hypervisor</small>
                </div>
                
                <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fab fa-docker text-success me-2"></i>
                        <strong>&nbsp;Container</strong>
                    </div>
                    <small class="text-muted">Lightweight virtualization using LXC containers</small>
                </div>
                
                <div class="mb-0">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-server text-warning me-2"></i>
                        <strong>&nbsp;Physical Device</strong>
                    </div>
                    <small class="text-muted">Real hardware devices connected to the network</small>
                </div>
            </div>
        </div>

        {% if virtuality == 1 %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-microchip me-2"></i> Hardware Guidelines
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <small>
                        <strong>CPU Configuration:</strong><br>
                        The total vCPU count should be: Cores × Sockets × Threads
                    </small>
                </div>
                
                <div class="mb-3">
                    <strong class="small">Recommended Flavors:</strong>
                    <ul class="small mb-0">
                        <li>XX-Small: 1 vCPU, 256MB RAM</li>
                        <li>X-Small: 1 vCPU, 512MB RAM</li>
                        <li>Medium: 2 vCPU, 1GB RAM</li>
                        <li>Large: 4 vCPU, 2GB RAM</li>
                    </ul>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-network-wired me-2"></i> Control protocol
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-0">
                    <ul class="small mb-0">
                        <li><strong>VNC:</strong> Graphical console access</li>
                        <li><strong>Login:</strong> Command line access for container</li>
                        <li><strong>Serial:</strong> Command line access through serial of VM</li>
                    </ul>
                </div>
            </div>
        </div>

        {% if app.request.uri ends with 'edit' %}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('show_device', {'id': data.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-eye me-2"></i> View Device
                    </a>
                    
                    <a href="{{ path('devices') }}" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Devices
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {{ encore_entry_script_tags('device-form-handler') }}
{% endblock %}
