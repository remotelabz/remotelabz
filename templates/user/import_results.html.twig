{% extends 'dashboard.base.html.twig' %}

{% block breadcrumbs %}
    {% set breadcrumbs = breadcrumbs|merge({ 
        'Users': path('users'),
        'Import Results': path('users_import_results')
    }) %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {% set category = 'admin' %}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {% set category = 'users' %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">
                            <i class="fa fa-check-circle"></i> User Import Results
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i> 
                            <strong>Important:</strong> Please save the passwords below. They will not be displayed again.
                            You can copy them to a secure location or print this page.
                        </div>

                        {% set successCount = 0 %}
                        {% set failureCount = 0 %}
                        
                        {% for result in importResults %}
                            {% if result.success %}
                                {% set successCount = successCount + 1 %}
                            {% else %}
                                {% set failureCount = failureCount + 1 %}
                            {% endif %}
                        {% endfor %}

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card border-success import-stats-card success">
                                    <div class="card-body">
                                        <h5 class="text-success">
                                            <i class="fa fa-check-circle"></i> Successfully Imported
                                        </h5>
                                        <h2 class="mb-0">{{ successCount }}</h2>
                                    </div>
                                </div>
                            </div>
                            {% if failureCount > 0 %}
                            <div class="col-md-6">
                                <div class="card border-danger import-stats-card failure">
                                    <div class="card-body">
                                        <h5 class="text-danger">
                                            <i class="fa fa-times-circle"></i> Failed
                                        </h5>
                                        <h2 class="mb-0">{{ failureCount }}</h2>
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>

                        {# Successful imports table #}
                        {% if successCount > 0 %}
                        <h4 class="mt-4 mb-3">
                            <i class="fa fa-users"></i> Successfully Imported Users
                        </h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="importedUsersTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Last Name</th>
                                        <th>First Name</th>
                                        <th>Email</th>
                                        <th>Password</th>
                                        <th>Password Source</th>
                                        <th>Email Sent</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set index = 0 %}
                                    {% for result in importResults %}
                                        {% if result.success %}
                                            {% set index = index + 1 %}
                                            <tr>
                                                <td>{{ index }}</td>
                                                <td>{{ result.user.lastName }}</td>
                                                <td>{{ result.user.firstName }}</td>
                                                <td>{{ result.user.email }}</td>
                                                <td>
                                                    <div class="input-group password-actions">
                                                        <input type="password" 
                                                               class="form-control password-field" 
                                                               value="{{ result.password }}" 
                                                               id="password-{{ index }}"
                                                               readonly>
                                                        <div class="input-group-append">
                                                            <button class="btn btn-outline-secondary toggle-password" 
                                                                    type="button"
                                                                    data-target="password-{{ index }}"
                                                                    title="Show/Hide password">
                                                                <i class="fa fa-eye"></i>
                                                            </button>
                                                            <button class="btn btn-outline-primary copy-password" 
                                                                    type="button"
                                                                    data-target="password-{{ index }}"
                                                                    title="Copy password">
                                                                <i class="fa fa-copy"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    {% if result.passwordGenerated %}
                                                        <span class="badge badge-info password-source-badge generated">
                                                            <i class="fa fa-robot"></i> Generated
                                                        </span>
                                                        {% if result.passwordError %}
                                                            <br>
                                                            <small class="password-error">
                                                                <i class="fa fa-exclamation-triangle"></i> {{ result.passwordError }}
                                                            </small>
                                                        {% endif %}
                                                    {% else %}
                                                        <span class="badge badge-success password-source-badge from-csv">
                                                            <i class="fa fa-file-csv"></i> From CSV
                                                        </span>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    {% if result.emailSent %}
                                                        <span class="badge badge-success email-status sent">
                                                            <i class="fa fa-check"></i> Yes
                                                        </span>
                                                    {% else %}
                                                        <span class="badge badge-secondary email-status not-sent">
                                                            <i class="fa fa-times"></i> No
                                                        </span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <a href="{{ path('edit_user', {'id': result.user.id}) }}" 
                                                       class="btn btn-sm btn-primary"
                                                       title="Edit user">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% endif %}

                        {# Failed imports table #}
                        {% if failureCount > 0 %}
                        <h4 class="mt-5 mb-3 text-danger">
                            <i class="fa fa-exclamation-triangle"></i> Failed Imports
                        </h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered failed-imports-table">
                                <thead class="thead-danger">
                                    <tr>
                                        <th>#</th>
                                        <th>Last Name</th>
                                        <th>First Name</th>
                                        <th>Email</th>
                                        <th>Reason</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set failIndex = 0 %}
                                    {% for result in importResults %}
                                        {% if not result.success %}
                                            {% set failIndex = failIndex + 1 %}
                                            <tr>
                                                <td>{{ failIndex }}</td>
                                                <td>{{ result.lastName }}</td>
                                                <td>{{ result.firstName }}</td>
                                                <td>{{ result.email }}</td>
                                                <td>
                                                    <span class="badge badge-danger failure-reason">
                                                        {{ result.error }}
                                                    </span>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% endif %}

                        {# Action buttons #}
                        <div class="mt-4 d-flex justify-content-between">
                            <a href="{{ path('users') }}" class="btn btn-secondary">
                                <i class="fa fa-arrow-left"></i> Back to Users
                            </a>
                            <div>
                                <button id="exportCSV" class="btn btn-success">
                                    <i class="fa fa-file-csv"></i> Export to CSV
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user-import-results') }}
{% endblock %}
