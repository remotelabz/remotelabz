{% extends 'dashboard.base.html.twig' %}

{% block breadcrumbs %}
    {%- set breadcrumbs = breadcrumbs|merge({ 'Instances': path('instances') }) -%}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {% set category = 'instances' %}
    {{ parent() }}
{% endblock %}

