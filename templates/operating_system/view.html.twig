{% extends 'dashboard.base.html.twig' %}

{% block title %}{{ operatingSystem.name }} - Operating Systems - {{ parent() }}{% endblock %}

{% block breadcrumbs %}
    {%- set breadcrumbs = breadcrumbs|merge({ 
        (operatingSystem.name): path('show_operating_system', {'id': operatingSystem.id}),
        'Operating systems': path('operating_systems')
        
    }) -%}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {% set category = 'operating_systems' %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
{# Delete Confirmation Modal #}
{% embed 'modal.html.twig' with {
    'title': 'Delete Operating System'|trans, 
    'class': 'delete-modal',
    'id': 'deleteModal'
} %}
    {% block body %}
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Warning:</strong> This action cannot be undone.
    </div>
    <p>Are you sure you want to delete the operating system <strong>{{ operatingSystem.name }}</strong>?</p>
    
    <div class="d-flex justify-content-between mt-3">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form method="post" action="{{ path('delete_operating_system', {'id': operatingSystem.id}) }}" class="d-inline">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ operatingSystem.id) }}">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Delete Operating System
            </button>
        </form>
    </div>
{% endblock %}
{% endembed %}

{# Header Section #}
<div class="content-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <div class="d-flex align-items-center mb-2">
                <h1 class="display-6 mb-0 me-3">{{ operatingSystem.name }}</h1>
            </div>
        </div>
    </div>
</div>

{# Main Content #}
<div class="row">
    <div class="col-lg-8">
        {# Image Information Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-hdd me-2"></i> Image Information
                </h5>
            </div>
            <div class="card-body">
                {% if operatingSystem.imageUrl is not null %}
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Source Type:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-warning">Remote URL</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Image URL:</strong></div>
                        <div class="col-sm-9">
                            <a href="{{ operatingSystem.imageUrl }}" target="_blank" class="text-break">
                                {{ operatingSystem.imageUrl }}
                                <i class="fas fa-external-link-alt ms-1"></i>
                            </a>
                        </div>
                    </div>
                {% elseif operatingSystem.imageFilename is not null %}
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Source Type:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge bg-success">Local File</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Filename:</strong></div>
                        <div class="col-sm-9">
                            <code>{{ operatingSystem.imageFilename }}</code>
                        </div>
                    </div>
                    {% if operatingSystem.flavorDisk %}
                    <div class="row mb-0">
                        <div class="col-sm-3"><strong>Flavor disk:</strong></div>
                        <div class="col-sm-9">{{ operatingSystem.flavorDisk.name }} ({{ operatingSystem.flavorDisk.disk }}GB)</div>
                    </div>
                    {% endif %}
                   {# {% if operatingSystem.hypervisor and operatingSystem.hypervisor.name == "qemu" %}
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Download:</strong></div>
                        <div class="col-sm-9">
                            <a href="{{ absolute_url('/uploads/images/' ~ operatingSystem.imageFilename) }}" 
                               class="btn btn-sm btn-outline-primary" target="_blank">
                                <i class="fas fa-download me-2"></i>Download Image
                            </a>
                        </div>
                    </div>
                    {% endif %}#}
                {% else %}
                    <a href="{{ path('edit_operating_system', {'id': operatingSystem.id}) }}">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        No image source configured for this operating system.
                    </div></a>
                {% endif %}
                
                {% if operatingSystem.image %}
                <div class="row mb-0">
                    <div class="col-sm-3"><strong>Resolved Path:</strong></div>
                    <div class="col-sm-9">
                        <code class="text-break">{{ operatingSystem.image }}</code>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

        {# System Specifications Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cogs me-2"></i> System Specifications
                </h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Architecture:</strong></div>
                    <div class="col-sm-9">
                        {% if operatingSystem.arch %}
                            <span class="badge bg-info fs-6">{{ operatingSystem.arch.name }}</span>
                        {% else %}
                        <a href="{{ path('edit_operating_system', {'id': operatingSystem.id}) }}" 
                       class="text-muted">
                        Not specified
                    </a>
                        {% endif %}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Hypervisor:</strong></div>
                    <div class="col-sm-9">
                        {% if operatingSystem.hypervisor %}
                            <span class="badge bg-light text-dark fs-6">{{ operatingSystem.hypervisor.name|title }}</span>
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                {% if operatingSystem.description %}
                <div class="row mb-0">
                    <div class="col-sm-3"><strong>Description:</strong></div>
                    <div class="col-sm-9">{{ operatingSystem.description }}</div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        {# Quick Actions Card #}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                     <hr class="my-2">
                    <a href="{{ path('operating_systems') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to list
                    </a>

                    <hr class="my-2">
                    
                    <a href="{{ path('edit_operating_system', {'id': operatingSystem.id}) }}" 
                       class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i> Edit Operating System
                    </a>
                                        <hr class="my-2">
                    {# {% if operatingSystem.imageFilename and operatingSystem.hypervisor and operatingSystem.hypervisor.name == "qemu" %}
                    <a href="{{ absolute_url('/uploads/images/' ~ operatingSystem.imageFilename) }}" 
                       class="btn btn-outline-success" target="_blank">
                        <i class="fas fa-download me-2"></i>Download Image
                    </a>
                    {% endif %} #}
                        {% if operatingSystem.hypervisor and operatingSystem.hypervisor.name != "natif" %}
                            <button class="btn btn-danger" data-toggle="modal" data-target={{'.delete-modal'}}>
                                <i class="fas fa-trash me-2"></i> Delete Operating System
                            </button>
                        {% endif %}
             </button>
                </div>
            </div>
        </div>


    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Copy to clipboard functionality
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success toast or notification
                console.log('Copied to clipboard:', text);
            });
        }
        
        // Add click handlers for copyable elements
        document.addEventListener('DOMContentLoaded', function() {
            const codeElements = document.querySelectorAll('code');
            codeElements.forEach(function(element) {
                element.style.cursor = 'pointer';
                element.title = 'Click to copy';
                element.addEventListener('click', function() {
                    copyToClipboard(this.textContent);
                });
            });
        });
    </script>
{% endblock %}