{% extends 'operating_system/index.html.twig' %}

{% block breadcrumbs %}
    {% set breadcrumbs = breadcrumbs|merge({ 'New LXC Container': path('new_lxc_device') }) %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
<div class="content-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <div class="d-flex align-items-center">
                <h1 class="display-6 mb-0 me-3">Create LXC Container</h1>
                <span class="badge bg-success fs-6">
                    <i class="fab fa-docker me-1"></i>Container
                </span>
            </div>
            <p class="text-muted mb-0 mt-2">Select a Linux container image from the official repository</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fab fa-linux me-2"></i> Linux Container Images
                </h5>
            </div>
            <div class="card-body">
                <div id="lxc-wizard">
                    <!-- Step 1: OS Selection -->
                    <div id="step-os" class="wizard-step active">
                        <h6 class="mb-3">Step 1: Select Operating System</h6>
                        <div class="row g-3" id="os-grid">
                            {% for osName in os %}
                                <div class="col-md-4 col-sm-6">
                                    <div class="card h-100 os-card" data-os="{{ osName|lower }}" role="button">
                                        <div class="card-body text-center">
                                            <div class="os-icon mb-2">
                                                {% if osName|lower == 'ubuntu' %}
                                                    <i class="fab fa-ubuntu text-orange fa-2x"></i>
                                                {% elseif osName|lower == 'debian' %}
                                                    <i class="fab fa-linux text-danger fa-2x"></i>
                                                {% elseif osName|lower == 'alpine' %}
                                                    <i class="fas fa-mountain text-primary fa-2x"></i>
                                                {% elseif osName|lower == 'centos' %}
                                                    <i class="fab fa-centos text-info fa-2x"></i>
                                                {% elseif osName|lower == 'fedora' %}
                                                    <i class="fab fa-fedora text-primary fa-2x"></i>
                                                {% else %}
                                                    <i class="fab fa-linux text-secondary fa-2x"></i>
                                                {% endif %}
                                            </div>
                                            <h6 class="card-title">{{ osName }}</h6>
                                            <small class="text-muted">Linux Distribution</small>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        
                        <div class="alert alert-info mt-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> These images are fetched from the official 
                            <a href="https://images.linuxcontainers.org" target="_blank">Linux Containers Image Server</a>
                        </div>
                    </div>

                    <!-- Step 2: Version Selection -->
                    <div id="step-version" class="wizard-step" style="display: none;">
                        <div class="d-flex align-items-center mb-3">
                            <button type="button" class="btn btn-outline-secondary btn-sm me-3" onclick="goToStep('step-os')">
                                <i class="fas fa-arrow-left"></i> Back
                            </button>
                            <h6 class="mb-0">Step 2: Select Version for <span id="selected-os"></span></h6>
                        </div>
                        
                        <div class="row g-2" id="version-grid">
                            <!-- Versions will be loaded dynamically -->
                        </div>
                        
                        <div class="text-center mt-4" id="version-loading" style="display: none;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading versions...</span>
                            </div>
                            <div class="mt-2">Loading available versions...</div>
                        </div>
                    </div>

                    <!-- Step 3: Confirmation -->
                    <div id="step-confirm" class="wizard-step" style="display: none;">
                        <div class="d-flex align-items-center mb-3">
                            <button type="button" class="btn btn-outline-secondary btn-sm me-3" onclick="goToStep('step-version')">
                                <i class="fas fa-arrow-left"></i> Back
                            </button>
                            <h6 class="mb-0">Step 3: Confirm Selection</h6>
                        </div>
                        
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Operating System:</strong>
                                        <div class="text-muted" id="confirm-os"></div>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Version:</strong>
                                        <div class="text-muted" id="confirm-version"></div>
                                    </div>
                                </div>
                                
                                <div class="mt-3">
                                    <strong>Image URL:</strong>
                                    <div class="small text-muted" id="confirm-url"></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <button type="button" class="btn btn-success" onclick="createLxcDevice()">
                                <i class="fas fa-plus me-2"></i>Create LXC Container
                            </button>
                        </div>
                        
                        <div class="text-center mt-4" id="creation-loading" style="display: none;">
                            <div class="spinner-border text-success" role="status">
                                <span class="visually-hidden">Creating container...</span>
                            </div>
                            <div class="mt-2">Creating LXC container...</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i> About LXC Containers
                </h5>
            </div>
            <div class="card-body">
                <p class="small">
                    <strong>Linux Containers (LXC)</strong> provide operating system-level virtualization 
                    that allows multiple isolated Linux systems to run on a single host.
                </p>
                
                <div class="mb-3">
                    <strong class="small">Advantages:</strong>
                    <ul class="small mb-0">
                        <li>Lightweight compared to VMs</li>
                        <li>Fast startup times</li>
                        <li>Low resource overhead</li>
                        <li>Native performance</li>
                    </ul>
                </div>
                
                <div class="mb-0">
                    <strong class="small">Use Cases:</strong>
                    <ul class="small mb-0">
                        <li>Web application testing</li>
                        <li>Development environments</li>
                        <li>Microservices</li>
                        <li>CI/CD pipelines</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-download me-2"></i> Image Source
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-server text-primary me-2"></i>
                    <strong>Official Repository</strong>
                </div>
                <p class="small text-muted">
                    Images are downloaded from the official Linux Containers project repository, 
                    ensuring security and authenticity.
                </p>
                
                <div class="small">
                    <strong>Repository:</strong><br>
                    <a href="https://images.linuxcontainers.org" target="_blank" class="text-break">
                        images.linuxcontainers.org
                        <i class="fas fa-external-link-alt ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bolt me-2"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('new_operating_system') }}" class="btn btn-outline-primary">
                        <i class="fas fa-desktop me-2"></i> Create VM Instead
                    </a>
                    
                    <a href="{{ path('operating_systems') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Operating Systems
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    <script>
        let selectedOS = '';
        let selectedVersion = '';
        let availableVersions = [];

        // OS selection handler
        document.addEventListener('DOMContentLoaded', function() {
            const osCards = document.querySelectorAll('.os-card');
            
            osCards.forEach(card => {
                card.addEventListener('click', function() {
                    // Remove active state from all cards
                    osCards.forEach(c => c.classList.remove('border-primary', 'bg-primary-subtle'));
                    
                    // Add active state to clicked card
                    this.classList.add('border-primary', 'bg-primary-subtle');
                    
                    selectedOS = this.dataset.os;
                    document.getElementById('selected-os').textContent = selectedOS.charAt(0).toUpperCase() + selectedOS.slice(1);
                    
                    loadVersions(selectedOS);
                });
            });
        });

        function goToStep(stepId) {
            document.querySelectorAll('.wizard-step').forEach(step => {
                step.style.display = 'none';
            });
            document.getElementById(stepId).style.display = 'block';
        }

        async function loadVersions(os) {
            const versionGrid = document.getElementById('version-grid');
            const loadingDiv = document.getElementById('version-loading');
            
            // Show loading
            loadingDiv.style.display = 'block';
            versionGrid.innerHTML = '';
            
            try {
                const response = await fetch('/api/operating-systems/lxc_params', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ os: os })
                });
                
                const versions = await response.json();
                availableVersions = versions;
                
                // Hide loading
                loadingDiv.style.display = 'none';
                
                // Populate version grid
                versions.forEach(version => {
                    const versionCard = document.createElement('div');
                    versionCard.className = 'col-md-6 col-sm-12';
                    versionCard.innerHTML = `
                        <div class="card version-card" data-version="${version}" role="button">
                            <div class="card-body text-center py-2">
                                <h6 class="card-title mb-0">${version}</h6>
                                <small class="text-muted">Version</small>
                            </div>
                        </div>
                    `;
                    
                    versionCard.addEventListener('click', function() {
                        selectVersion(version);
                    });
                    
                    versionGrid.appendChild(versionCard);
                });
                
                goToStep('step-version');
                
            } catch (error) {
                console.error('Error loading versions:', error);
                loadingDiv.style.display = 'none';
                versionGrid.innerHTML = '<div class="col-12"><div class="alert alert-danger">Error loading versions. Please try again.</div></div>';
            }
        }

        function selectVersion(version) {
            // Remove active state from all version cards
            document.querySelectorAll('.version-card').forEach(card => {
                card.classList.remove('border-success', 'bg-success-subtle');
            });
            
            // Add active state to selected card
            event.target.closest('.version-card').classList.add('border-success', 'bg-success-subtle');
            
            selectedVersion = version;
            
            // Update confirmation step
            document.getElementById('confirm-os').textContent = selectedOS.charAt(0).toUpperCase() + selectedOS.slice(1);
            document.getElementById('confirm-version').textContent = selectedVersion;
            document.getElementById('confirm-url').textContent = `https://images.linuxcontainers.org/images/${selectedOS}/${selectedVersion}/amd64/default/`;
            
            // Go to confirmation step
            setTimeout(() => {
                goToStep('step-confirm');
            }, 500);
        }

        async function createLxcDevice() {
            const loadingDiv = document.getElementById('creation-loading');
            loadingDiv.style.display = 'block';
            
            try {
                const response = await fetch('/api/operating-systems/lxc', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        os: selectedOS,
                        version: selectedVersion
                    })
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    console.log('LXC device created:', result);
                    window.location.href = `/admin/operating-systems/${result.os_id}`;
                } else {
                    if (result.error && result.message) {
                        toast.error(result.message, {
                            autoClose: 10000,
                        });
                        window.location.href = `/admin/operating-systems`;

                    } else {
                        throw new Error(result.message || 'Error creating LXC device');
                    }
                }
            } catch (error) {
                console.error('Error creating LXC device:', error);
                loadingDiv.style.display = 'none';
                alert('Error creating LXC container. Please try again.');
            }
        }

        // Add some CSS for card interactions
        const style = document.createElement('style');
        style.textContent = `
            .os-card, .version-card {
                transition: all 0.2s ease;
                cursor: pointer;
            }
            .os-card:hover, .version-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }
            .text-orange {
                color: #e95420 !important;
            }
        `;
        document.head.appendChild(style);
    </script>
{% endblock %}