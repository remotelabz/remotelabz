{% extends 'dashboard.base.html.twig' %}

{% block title %}New Blank Operating System - {{ parent() }}{% endblock %}

{% block breadcrumbs %}
    {%- set breadcrumbs = breadcrumbs|merge({ 
        'Operating systems': path('operating_systems'),
        'New Blank OS': path('new_blank_operating_system')
    }) -%}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {% set category = 'operating_systems' %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
<div class="top-panel">
    <div class="d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-square me-2"></i>New Blank Operating System</h1>
        <a href="{{ path('operating_systems') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="labs-panel mt-4">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Create Blank Operating System</h5>
            <small class="text-muted">
                A blank OS is created without any disk image. You can configure the disk size using a flavor.
            </small>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.name) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.flavorDisk) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        {{ form_row(form.description) }}
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a href="{{ path('operating_systems') }}" class="btn btn-secondary">
                        Cancel
                    </a>
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Note:</strong> A blank operating system is created without any disk image. 
        This is useful for creating VMs that will be provisioned later or for testing purposes.
    </div>
</div>
{% endblock %}