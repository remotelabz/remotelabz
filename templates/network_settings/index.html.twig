{% extends 'dashboard.base.html.twig' %}

{% block breadcrumbs %}
    {% set breadcrumbs = breadcrumbs|merge({ 'Network settings': path('network_settings') }) %}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {% set category = 'network_settings' %}
    {{ parent() }}
{% endblock %}

{% block wrapper %}
    <div class="content-title">
        <div class="content-title-infos">
            <h1>{{ 'Network Settings'|trans }}</h1>
        </div>
        <div class="content-title-actions">
            <a href="{{ path('new_network_settings') }}" class="btn btn-success">{{ 'New network settings'|trans }}</a>
        </div>
    </div>
    <div class="content-body">
        <table id="networkSettingsTable" class="table table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>{{ 'Name'|trans }}</th>
                    <th>{{ 'IPv4'|trans }}</th>
                    <th>{{ 'IPv6'|trans }}</th>
                    <th>{{ 'Gateway'|trans }}</th>
                    <th>{{ 'Protocol'|trans }}</th>
                    <th>{{ 'Port'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('network-settings') }}
{% endblock %}