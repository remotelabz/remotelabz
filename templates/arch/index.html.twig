{% extends 'dashboard.base.html.twig' %}

{% block title %}Architectures - {{ parent() }}{% endblock %}

{% block wrapper %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Architectures</h1>
    <a class="btn btn-success" href="{{ path('arch_new') }}">
        <i class="fas fa-plus me-2"></i> New Architecture
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if archs is empty %}
            <div class="alert alert-info">No architectures found.</div>
        {% else %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for arch in archs %}
                        <tr>
                            <td>{{ arch.name }}</td>
                            <td>
                                <a href="{{ path('arch_new', {'id': arch.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}